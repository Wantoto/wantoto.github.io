extend common/base
include common/mixin

block append page-stylesheets
    link(href="/static/stylesheets/index.css", rel="stylesheet")

block page-content
    block page-navigation
        nav.navbar.navbar-wtt.navbar-fixed-top(role="navigation")
            div.container
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse",
                                                   data-target="#page-main-navbar")
                        span.sr-only Navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/'): img(src="/static/images/logo-sm.png")
                div#page-main-navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li: a(href='/apps')= _t('navigation.apps', 'Apps2')
                        li: a(href='/jobs')= _t('navigation.jobs', 'Jobs2')
                        li: a(href='/about')= _t('navigation.about', 'About2')
