extend ../common/base

block prepend page-title
    | #{locale.get('pageTitle.about')} |&nbsp;

block append page-stylesheets
    link(href="/static/stylesheets/about.css", rel="stylesheet")

block page-content
    section#main-content.container
        div.row: div.col-xs-12
            div.page-header
                h1 #{locale.get('pageTitle.about')}
        div.row: div.col-xs-12
            if locale.locale === 'en'
                include:markdown ../locales/about.en.md
            else if locale.locale === 'tw'
                include:markdown ../locales/about.tw.md
